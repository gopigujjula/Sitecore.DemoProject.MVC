@using Sitecore.DemoProject.MVC.Web.Models
@model NavigationViewModel

@if (Model != null && Model.Navigations != null && Model.Navigations.Count > 0)
{
    <div class="nav-bar">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg bg-dark navbar-dark">
                <a href="#" class="navbar-brand">MENU</a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto">
                        @foreach (var navigation in Model.Navigations)
                        {
                            if (navigation.ChildNavigations != null && navigation.ChildNavigations.Count > 0)
                            {
                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">@navigation.NavigationTitle</a>
                                    <div class="dropdown-menu">
                                        @foreach (var childNavigation in navigation.ChildNavigations)
                                        {
                                            <a href="@childNavigation.NavigationLink" class="dropdown-item">
                                                @childNavigation.NavigationTitle
                                            </a>
                                        }
                                    </div>
                                </div>
                            }
                            else
                            {
                                <a href="@navigation.NavigationLink" class="nav-item nav-link @navigation.ActiveClass">
                                    @navigation.NavigationTitle
                                </a>
                            }
                        }
                    </div>
                </div>
            </nav>
        </div>
    </div>
}
